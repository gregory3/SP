<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/create_user_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingTop="10dp">

    <Button
        android:id="@+id/return_to_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="276dp"
        android:text="@string/return_to_login"
        android:layout_centerInParent="true"
        android:visibility="visible" />

    <TextView
        android:id="@+id/on_success_user_create_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/return_to_login_button"
        android:layout_centerInParent="true"
        android:layout_marginBottom="25dp"
        android:text="@string/on_success_user_create" />
</RelativeLayout>